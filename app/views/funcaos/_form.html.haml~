<%= form_for(@funcao) do |f| %>
  <% if @funcao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@funcao.errors.count, "error") %> prohibited this funcao from being saved:</h2>

      <ul>
      <% @funcao.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
